@model TechNova.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="register-div">
    <div class="register-image-div">
        <img
            src="~/images/login-image.png"
            alt="login image"
            class="register-image-style"
            />
    </div>
    <div class="register-form-div">
        <h2 class="text-center fw-bolder mb-2">Create an Account</h2>
        <h5 class="text-center mb-4">Enter your details below</h5>


        <form asp-action="Register" method="post" class="w-50 mx-auto">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <div class="mb-3">
                <label>Full Name</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn button-style w-100">Register</button>
            <div class="mt-3 text-center">
                Already have an account? <a href="@Url.Action("Login", "Account")" class="fw-bold">Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
