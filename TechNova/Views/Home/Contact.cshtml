@{
    ViewData["Title"] = "Contact";
}

<div class="container mt-5 mb-5">
    <nav style="--bs-breadcrumb-divider: '>'; font-size: 14px;" aria-label="breadcrumb">
        <ol class="breadcrumb bg-white px-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item active text-muted" aria-current="page">Contact</li>
        </ol>
    </nav>

    <div class="row mt-5 pb-4">
        <div class="col-md-4">
            <div class="contact-card p-4 mb-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-danger rounded-circle d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                        <i class="fas fa-phone-alt text-white"></i>
                    </div>
                    <h6 class="mb-0 ms-3 fw-bold">Call To Us</h6>
                </div>
                <p class="mb-1">We are available 24/7, 7 days a week.</p>
                <p>
                    Phone:<a href="tel:+1647123456">+1 (647) 123-456</a>
                </p>

                <hr class="w-100"/>

                <div class="d-flex align-items-center mb-3 mt-2">
                    <div class="bg-danger rounded-circle d-flex justify-content-center align-items-center" style="width: 40px; height: 40px;">
                        <i class="fas fa-envelope text-white"></i>
                    </div>
                    <h6 class="mb-0 ms-3 fw-bold">Write To Us</h6>
                </div>
                <p class="mb-1">Fill out our form and we will contact you within 24 hours.</p>
                <p class="mb-1">Email: <a href="mailto:customer@technova.com">customer@technova.com</a></p>
                <p class="mb-1">Email: <a href="mailto:support@technova.com">support@technova.com</a></p>
            </div>
        </div>

        <div class="col-md-8">
            <div class="contact-card p-4 mb-4">
                <form method="post" class="w-100 h-100">
                    <div class="row w-100 mb-2">
                        <div class="col-md-4 mb-4 input-div">
                            <input type="text" class="form-control" placeholder="Your Name *" required />
                        </div>
                        <div class="col-md-4 mb-4 input-div">
                            <input type="email" class="form-control" placeholder="Your Email *" required />
                        </div>
                        <div class="col-md-4 mb-4 input-div">
                            <input type="tel" class="form-control" placeholder="Your Phone *" required />
                        </div>
                    </div>
                    <div class="mb-4 textarea-div">
                        <textarea class="form-control" rows="5" placeholder="Your Message"></textarea>
                    </div>
                    <div class="d-flex align-items-center justify-content-end">
                        <button type="submit" class="btn button-style px-4">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
