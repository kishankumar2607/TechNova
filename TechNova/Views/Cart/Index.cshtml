@model List<TechNova.Models.CartItem>
@{
    ViewData["Title"] = "Cart";
    var subtotal = (decimal)(ViewBag.Subtotal ?? 0m);
    var shipping = (decimal)(ViewBag.Shipping ?? 0m);
    var taxRate  = (decimal)(ViewBag.TaxRate ?? 0.13m);
    var tax      = (decimal)(ViewBag.Tax ?? 0m);
    var total    = (decimal)(ViewBag.Total ?? 0m);
    var first    = Model?.FirstOrDefault();
}

<div class="container my-4 cart-view">
    <nav class="small text-muted mb-3">
        <a class="text-muted text-decoration-none" href="@Url.Action("Index","Home")">Home</a>
        <span class="mx-1">/</span>
        <span>Cart</span>
    </nav>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-light border">
            Your cart is empty. <a href="@Url.Action("Index","Products")" class="fw-semibold">Return to shop</a>.
        </div>
    }
    else
    {
        <div class="cart-table mb-2 d-none d-md-grid">
            <div class="ct-head">Product</div>
            <div class="ct-head">Price</div>
            <div class="ct-head">Quantity</div>
            <div class="ct-head">Subtotal</div>
        </div>

        @foreach (var it in Model)
        {
            <div class="cart-row align-items-center">
                <div class="ct-cell">
                    <div class="d-flex align-items-center">
                        <div class="thumb-wrap me-3">
                            <img src="@it.ImageURL" alt="@it.Name" class="thumb" />
                            <form asp-action="Remove" asp-controller="Cart" method="post" class="remove-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@it.ProductID" />
                                <button type="submit" class="remove-btn" title="Remove">×</button>
                            </form>
                        </div>
                        <div class="fw-semibold">@it.Name</div>
                    </div>
                </div>

                <div class="ct-cell">$@it.UnitPrice.ToString("0.00")</div>

                <div class="ct-cell">
                    <form asp-action="Update" asp-controller="Cart" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productId" value="@it.ProductID" />
                        <select name="qty" class="form-select form-select-sm qty-select" onchange="this.form.submit()">
                            @for (var q = 1; q <= 10; q++)
                            {
                                var sel = q == it.Qty ? "selected" : "";
                                @:<option value="@q" @sel>@q.ToString("00")</option>
                            }
                        </select>
                    </form>
                </div>

                <div class="ct-cell text-end fw-semibold">$@it.LineTotal.ToString("0.00")</div>
            </div>
        }

        <div class="d-flex flex-wrap gap-2 mt-3 mb-4">
            <a class="btn button-outline-secondary" href="@Url.Action("Index","Products")">Return To Shop</a>
            <a class="btn button-style" href="@Url.Action("Index","Cart")">Update Cart</a>
        </div>

        <div class="row g-4">
            <div class="col-lg-7">
                <div class="d-flex gap-2">
                    <input type="text" class="form-control" placeholder="Coupon Code" />
                    <button class="btn button-style w-50">Apply Coupon</button>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="card summary-card">
                    <div class="card-body">
                        <h6 class="fw-bold mb-3">Cart Total</h6>

                        <div class="d-flex justify-content-between py-2 border-bottom">
                            <span class="text-muted">Subtotal:</span>
                            <span>$@subtotal.ToString("0.00")</span>
                        </div>
                        <div class="d-flex justify-content-between py-2 border-bottom">
                            <span class="text-muted">Tax (@((taxRate * 100).ToString("0"))%)</span>
                            <span>$@tax.ToString("0.00")</span>
                        </div>
                        <div class="d-flex justify-content-between py-2 border-bottom">
                            <span class="text-muted">Shipping:</span>
                            <span>@(shipping <= 0 ? "Free" : $"${shipping:0.00}")</span>
                        </div>
                        <div class="d-flex justify-content-between py-2">
                            <span class="fw-bold text-danger">Total:</span>
                            <span class="fw-bold text-danger">$@total.ToString("0.00")</span>
                        </div>

                        @if (first != null)
                        {
                            <form method="post" action="@Url.Action("Start","Cart")" class="d-grid mt-3">
                                @Html.AntiForgeryToken()

                                <div class="border rounded p-3 mb-3">
                                    <div class="form-check mb-2">
                                        <input class="form-check-input" type="radio" name="paymentId" value="2" id="payCOD" checked />
                                        <label class="form-check-label" for="payCOD">Cash on delivery</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="paymentId" value="1" id="payBank" />
                                        <label class="form-check-label" for="payBank">Bank</label>
                                    </div>
                                </div>

                                <button class="btn button-style" type="submit">Proceed</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
