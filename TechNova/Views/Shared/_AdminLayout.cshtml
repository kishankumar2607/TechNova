@{
    var userName = Context.Request.Cookies["UserName"];
    var role = Context.Request.Cookies["Role"];
    var firstName = !string.IsNullOrEmpty(userName) ? userName.Split(' ')[0] : null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechNova</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechNova.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">


    <style>
        h6 {
            font-size: 18px;
            font-weight: 700;
        }

        .nav-item {
            padding-bottom: 0 !important;
        }

        a {
            text-decoration: none;
            font-weight: 600;
            color: #000000 !important;
        }

        li {
            padding-bottom: 5px !important;
        }

        a:hover {
            color: #DB4444 !important;
            font-weight: 600;
            transition: all 0.3s ease-in;
        }
    </style>
</head>
<body>
    @if (role == "Admin")
    {
        <!-- Admin Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-danger" href="@Url.Action("Index", "Product", new { area = "Admin" })">
                    <img src="~/images/logo.png" alt="TechNova" height="28" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 w-100 d-flex justify-content-end">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Product", new { area = "Admin" })">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Create", "Product", new { area = "Admin" })">Add Product</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-danger" href="#" role="button" data-bs-toggle="dropdown">
                                Hello, @firstName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Account", new { area = "Admin" })">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div class="bg-black">
        <div class="text-center">
            <small class="text-white d-block py-3">© Copyright TechNova 2025. All rights reserved</small>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
