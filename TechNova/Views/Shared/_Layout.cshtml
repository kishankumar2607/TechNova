<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechNova</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechNova.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">


    <style>
        h6{
            font-size: 18px;
            font-weight: 700;
        }

        .nav-item{
            padding-bottom: 0 !important;
        }

        a {
            text-decoration: none;
            font-weight: 600;
            color: #000000 !important;
        }

        li{
            padding-bottom: 5px !important;
        }

        a:hover{
            color: #DB4444 !important;
            font-weight: 600;
            transition: all 0.3s ease-in;
        }

        .input-email-form{
            border: 2px solid #ffffff;
            border-radius: 5px;
            background-color: transparent;
            width: fit-content;
        }

        .input-email-form input{
            background-color: transparent;
            border: none;
            color: #ffffff;
            padding: 6px 8px;
        }

            .input-email-form input:focus {
                border: none;
            }

            .input-email-form button{
                border: none;
                background-color: transparent;
            }

        .cart-toast {
            background: #DB4444;
            color: #fff;
            padding: 10px 14px;
            border-radius: 10px;
            margin-top: 8px;
            opacity: 0;
            transform: translateY(8px);
            transition: all .18s ease;
            box-shadow: 0 10px 25px rgba(0,0,0,.18);
        }

            .cart-toast.show {
                opacity: 1;
                transform: translateY(0);
            }
    </style>

    <script>
        (function () {
          function wireAddToCart() {
            document.querySelectorAll('form.js-addtocart').forEach(function (f) {
              if (f.dataset.wired) return;
              f.dataset.wired = "1";

              f.addEventListener('submit', async function (e) {
                e.preventDefault();
                try {
                  const resp = await fetch(f.action, {
                    method: 'POST',
                    headers: { 'X-Requested-With': 'XMLHttpRequest' },
                    body: new FormData(f) // includes anti-forgery token
                  });
                  let msg = 'Added to cart.';
                  if (resp.ok) {
                    const data = await resp.json().catch(() => ({}));
                    if (data && data.message) msg = data.message;

                    // Optional: update a cart badge if you have one
                    if (data && typeof data.count === 'number') {
                      const badge = document.querySelector('[data-cart-count]');
                      if (badge) badge.textContent = data.count;
                    }
                  } else {
                    msg = 'Could not add to cart. Please try again.';
                  }
                  showToast(msg);
                } catch {
                  showToast('Could not add to cart. Please try again.');
                }
              });
            });
          }

          function showToast(text) {
            let wrap = document.getElementById('toast-wrap');
            if (!wrap) {
              wrap = document.createElement('div');
              wrap.id = 'toast-wrap';
              wrap.style.position = 'fixed';
              wrap.style.right = '16px';
              wrap.style.top = '16px';
              wrap.style.zIndex = '1055';
              document.body.appendChild(wrap);
            }
            const t = document.createElement('div');
            t.className = 'cart-toast';
            t.textContent = text;
            wrap.appendChild(t);
            requestAnimationFrame(() => t.classList.add('show'));
            setTimeout(() => {
              t.classList.remove('show');
              setTimeout(() => t.remove(), 180);
            }, 2200);
          }

          document.addEventListener('DOMContentLoaded', wireAddToCart);
        })();
    </script>
</head>
<body>
    <!-- Header: Top Banner -->
    <div class="bg-black text-white text-center py-3 small">
        Summer Sale On Selected Electronic Device + Free Express Delivery – OFF 50%! <a href="@Url.Action("Index","Products")" class="text-white fw-bold">Shop Now</a>
    </div>
    <header>
        <!-- Header: Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold text-danger" href="@Url.Action("Index", "Home")">
                    <img src="~/images/logo.png" alt="TechNova" height="28" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
                    <div>
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Products")">Products</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">About</a></li>
                            @{
                                var userName = Context.Request.Cookies["UserName"];
                                var firstName = !string.IsNullOrEmpty(userName) ? userName.Split(' ')[0] : null;
                            }
                            @if (string.IsNullOrEmpty(userName))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-danger" href="#" role="button" data-bs-toggle="dropdown">
                                        Hello, @firstName
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item fw-bold" href="@Url.Action("Logout", "Account")">Logout</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                    <form class="d-flex ms-4" role="search">
                        <input class="form-control me-2" type="search" placeholder="What are you looking for?" aria-label="Search" />
                        <button class="btn btn-outline-dark" type="submit"><i class="fas fa-search"></i></button>
                    </form>
                    <div class="d-flex ms-3 align-items-center">
                        <a href="@Url.Action("Wishlist", "Wishlist")" class="me-3"><i class="far fa-heart fa-lg text-black"></i></a>
                        <a href="@Url.Action("Index", "Cart")" class="me-3">
                            <i class="fas fa-shopping-cart fa-lg text-black"></i>
                        </a>
                        @{
                            var userClass = string.IsNullOrEmpty(userName) ? "d-none" : "d-block";
                        }
                        <a href="@Url.Action("MyAccount", "Account")"class="@userClass">
                            <i class="far fa-user fa-lg text-black"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div class="bg-black">
        <footer class="text-white pt-5 pb-3">
            <div class="container">
                <div class="row">

                    <!-- Logo & Subscribe -->
                    <div class="col-md-3 mb-4">
                        <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                            <img src="~/images/logo.png" alt="TechNova" height="32" />
                        </a>
                        <h5 class="mt-3"> Subscribe</h5>
                        <p class="mt-3">Get 10% off your first order</p>
                        <form>
