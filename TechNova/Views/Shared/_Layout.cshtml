                                <input type="email" placeholder="Enter your email" />
                                <button type="submit"><i class="fa-solid fa-location-arrow text-white "></i></button>
                            </div>
                        </form>
                    </div>

                    <!-- Support -->
                    <div class="col-md-3 mb-4">
                        <h6 class="pb-2">Support</h6>
                        <p>101B5 Pioneer Plaza<br />Toronto, Ontario</p>
                        <a href="mailto:hello@technova.com" class="text-white d-block">hello@technova.com</a><br/>
                        <a href="tel:+1647123456" class="text-white">+1 (647) 123-456</a>
                    </div>

                    <!-- Account -->
                    <div class="col-md-2 mb-4">
                        <h6 class="pb-1">Account</h6>
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("MyAccount", "Account")" class="text-white">My Account</a></li>

                            @if (string.IsNullOrEmpty(userName))
                            {
                                <li>
                                    <a href="@Url.Action("Login", "Account")" class="text-white">Login / Register</a>
                                </li>
                            }

                            <li><a href="#" class="text-white">Cart</a></li>
                            <li><a href="#" class="text-white">Wishlist</a></li>
                            <li><a href="#" class="text-white">Shop</a></li>
                        </ul>
                    </div>

                    <!-- Quick Links -->
                    <div class="col-md-2 mb-4">
                        <h6 class="pb-1">Quick Links</h6>
                        <ul class="list-unstyled">
                            <li><a href="@Url.Action("Privacy", "Home")" class="text-white">Privacy Policy</a></li>
                            <li><a href="@Url.Action("TermsofUse", "Home")" class="text-white">Terms Of Use</a></li>
                            <li><a href="@Url.Action("FAQ", "Home")" class="text-white">FAQ</a></li>
                            <li><a href="@Url.Action("Contact", "Home")" class="text-white">Contact</a></li>
                        </ul>
                    </div>

                    <!-- App Downloads -->
                    <div class="col-md-2 mb-4">
                        <h6 class="pb-1">Download App</h6>
                        <p>Save $3 with App New User Only</p>
                        <a href="#"><img src="~/images/google-play.png" class="img-fluid mb-2" alt="Google Play" /></a>
                        <a href="#"><img src="~/images/app-store.png" class="img-fluid" alt="App Store" /></a>
                        <div class="mt-3 d-flex align-items-center justify-content-between">
                            <a href="#" class="text-white me-3 fs-5"><i class="fa-brands fa-facebook-f"></i></a>
                            <a href="#" class="text-white me-3 fs-5"><i class="fa-brands fa-x-twitter"></i></a>
                            <a href="#" class="text-white me-3 fs-5"><i class="fa-brands fa-instagram"></i></a>
                            <a href="#" class="text-white fs-5"><i class="fa-brands fa-linkedin-in"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>

        <hr class="text-white m-0"/>

        <!-- Footer bottom -->
        <div class="text-center">
            <small class="text-muted d-block py-3">© Copyright TechNova 2025. All rights reserved</small>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
